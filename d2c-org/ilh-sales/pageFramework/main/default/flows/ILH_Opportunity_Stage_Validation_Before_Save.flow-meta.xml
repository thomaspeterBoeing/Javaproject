    <description>This flow checks for required fields. Could be edited to add more checks per future requirements</description>
    <environments>Default</environments>
    <formulas>
        <name>fieldspopulated</name>
        <dataType>Boolean</dataType>
        <expression>AND(
    NOT(ISPICKVAL({!$Record.HealthAssessment__c, &apos;&apos;})),
    NOT(ISPICKVAL({!$Record.InsurancePurpose__c, &apos;&apos;})),
    NOT(ISPICKVAL({!$Record.TobaccoUse__c, &apos;&apos;})),
    NOT(ISBLANK({!$Record.ProposedCoverage__c})),
    {!$Record.ProposedCoverage__c} &gt; 0
)</expression>
    </formulas>
