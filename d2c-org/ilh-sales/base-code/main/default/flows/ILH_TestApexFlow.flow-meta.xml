<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <assignments>
        <description>Assigns the output variable using a formula variable that concatenates the input variables.</description>
        <name>Assign_Output_Variable</name>
        <label>Assign Output Variable</label>
        <locationX>176</locationX>
        <locationY>134</locationY>
        <assignmentItems>
            <assignToReference>outputTxt_ValueC</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>outputFormula</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <description>This flow is used within Apex test classes for testing Apex classes that call flows.  The flow accepts two input variables and will concatenate those variables and assign to an output variable.</description>
    <environments>Default</environments>
    <formulas>
        <name>outputFormula</name>
        <dataType>String</dataType>
        <expression>{!inputTxt_ValueA} + {!inputTxt_ValueB}</expression>
    </formulas>
    <interviewLabel>ILH Test Apex Flow {!$Flow.CurrentDateTime}</interviewLabel>
    <label>ILH Test Apex Flow</label>
